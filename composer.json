{
  "name": "prooph/psr7-middleware",
  "description": "PSR-7 Middleware for prooph components",
  "type": "library",
  "license": "BSD-3-Clause",
  "homepage": "http://prooph-software.com/",
  "authors": [
    {
      "name": "Alexander Miertsch",
      "email": "contact@prooph.de",
      "homepage": "http://prooph-software.com/"
    },
    {
      "name": "Sandro Keil",
      "email": "contact@prooph.de",
      "homepage": "http://prooph-software.com/"
    },
    {
      "name": "Sascha-Oliver Prolic",
      "email": "saschaprolic@googlemail.com"
    },
    {
      "name": "Bas Kamer",
      "email": "baskamer@gmail.com"
    }
  ],
  "keywords": [
    "prooph",
    "psr-7",
    "middleware",
    "cqrs",
    "service bus",
    "event sourcing",
    "messaging",
    "psr7"
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": "^7.1",
    "prooph/common": "^4.0.0-beta",
    "prooph/service-bus" : "^6.0.0-beta",
    "psr/http-message": "^1.0",
    "react/promise" : "^2.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^5.7",
    "phpspec/prophecy": "dev-patch-1 as 1.6.2",
    "prooph/php-cs-fixer-config": "^0.1.1",
    "satooshi/php-coveralls": "^1.0",
    "container-interop/container-interop" : "^1.1",
    "sandrokeil/interop-config": "^2.0.1",
    "tobiju/bookdown-bootswatch-templates": "^1.0",
    "zendframework/zend-servicemanager": "^3.1",
    "malukenho/docheader": "^0.1.4"
  },
  "suggest": {
    "container-interop/container-interop": "^1.1 for usage of provided factories",
    "sandrokeil/interop-config": "^1.0 for usage of provided factories"
  },
  "conflict": {
    "sandrokeil/interop-config": "<2.0.1"
  },
  "autoload": {
    "psr-4": {
      "Prooph\\Psr7Middleware\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ProophTest\\Psr7Middleware\\": "tests/"
    }
  },
  "extra": {
    "branch-alias": {
      "dev-develop": "0.4-dev"
    }
  },
  "scripts": {
    "check": [
      "@cs",
      "@test"
    ],
    "coveralls": "coveralls",
    "cs": "php-cs-fixer fix -v --diff --dry-run",
    "cs-fix": "php-cs-fixer fix -v --diff",
    "check-license": "docheader check src/ tests/",
    "test": "phpunit",
    "test-coverage": "phpunit --coverage-clover build/logs/clover.xml",
    "docs": "bookdown docs/bookdown.json"
  },
  "repositories": [
    {
      "type": "git",
      "url": "https://github.com/prolic/prophecy.git"
    }
  ]
}
